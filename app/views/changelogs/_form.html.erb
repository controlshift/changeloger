<%= simple_form_for(@changelog) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :body, input_html: {rows: 10}, hint: 'Supports Github flavored markdown' %>
    <%= f.input :pull_request_id, label: 'Pull Request ID' %>
    <%= f.input :kind, collection: Changelog::KINDS, include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
