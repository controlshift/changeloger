<div class="card my-2">
  <div class="card-body <%= log.pending? ? 'pending-log' : '' %>">
    <div class="row">
      <div class="col-sm-8">
        <h5 class="card-title">
          <%= log.name %>
        </h5>
      </div>
      <div class="text-muted col-sm-4">
        <%= log.created_at.strftime("%B %-d, %Y") %>
      </div>
    </div>

    <p class="card-text">
      <%= log.body %>
    </p>
  </div>

  <div class="card-body">
    <%= link_to 'Edit', edit_changelog_path(log), class: 'btn btn-light float-start mx-2' %>
    <%= button_to 'Delete', changelog_path(log), class: 'btn btn-light float-start mx-2', method: 'delete' %>

    <% if log.pull_request_id.present? %>
      <%= link_to 'PR', log.pull_request_url, class: 'btn btn-light float-start mx-2' %>
    <% end %>
  </div>
</div>
