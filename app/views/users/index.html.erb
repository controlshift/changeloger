<h2>Users</h2>

<div class="row">
  <div class="col-sm-4">
    <%= simple_form_for(@user) do |f| %>
      <div class="form-inputs">
        <%= f.input :email %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'Invite', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>




<% @users.each do |user| %>
  <div class="card my-2">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-8">
          <h5 class="card-title">
            <%= user.email %>
          </h5>
        </div>
        <div class="col-sm-4">
          <%= button_to 'Destroy', user_path(user), class: 'btn btn-light', method: :delete %>
        </div>
      </div>
    </div>
  </div>

<% end %>
